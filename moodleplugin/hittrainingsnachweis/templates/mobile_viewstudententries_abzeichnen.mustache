        component="mod_hittrainingsnachweis"
        goBackOnSuccess ="true"
        method="mobile_trainingsnachweis_abzeichnen"
        [args]="{cmid: <% cmid %>, courseid: <% courseid %>}"
        >
        Abzeichnen
  </button>

  <button ion-button core-site-plugins-call-ws name="mobile_trainingsnachweis_abzeichnen"
        [params]="{hittrainingsnachweisid: <%hittrainingsnachweisid%>, studentid: <%studentid%>, entryid: <%id%>, bewertung: 0, abgezeichnet: false}"
        [preSets]="{getFromCache: 0, saveToCache: 0}"
        component="mod_hittrainingsnachweis"
        goBackOnSuccess ="true"
        method="mobile_trainingsnachweis_abzeichnen"
        [args]="{cmid: <% cmid %>, courseid: <% courseid %>}"
        >
        Bewertung entfernen
  </button>
