  <ion-item>
    <ion-label id="image" color="primary" stacked>Bewertung eingeben</ion-label>
    <ion-input [(ngModel)]="CONTENT_OTHERDATA.bewertung" type="number" value="<%bewertung%>" min="0" max="5"></ion-input>
