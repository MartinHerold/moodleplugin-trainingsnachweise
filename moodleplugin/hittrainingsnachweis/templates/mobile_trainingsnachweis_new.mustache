<div>
    <!-- Textarea in an item with a floating label -->
    <ion-item>
      <ion-label position="floating">Beschreibung</ion-label>
      <ion-textarea [(ngModel)]="CONTENT_OTHERDATA.beschreibung" id="beschreibung" name="beschreibung"></ion-textarea>
    </ion-item>

    <ion-item>
      <ion-label>Datum</ion-label>
      <ion-datetime [(ngModel)]="CONTENT_OTHERDATA.datum" displayFormat="D MMM YYYY H:mm" min="2021" max="2030" value="" required="true"></ion-datetime>
    </ion-item>


    <core-attachments
        (ionChange)="onFileChange()"
        [files]="attachments"
        [maxSubmissions]="1"
        [maxSize]="20970000"
        [componentId]="<%cmid%>"
        acceptedTypes="image">
    </core-attachments>

